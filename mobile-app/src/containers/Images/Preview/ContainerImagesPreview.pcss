.upload-container {
    &__images {
        display: flex;
        flex-direction: row;

        overflow-x: scroll;
    }

    &__submit {
        display: inline-block;
        width: 100%;
        padding: 10px;
        margin-top: 20px;
        border: none;
        border-radius: 4px;

        text-align: center;

        background-color: #0f9b51;
        color: #fff;

        font: 1.1rem sans-serif;

        cursor: pointer;
    }
}
