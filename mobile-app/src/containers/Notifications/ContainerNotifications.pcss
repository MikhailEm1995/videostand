.notifications-list {
    width: 100%;
    height: 20%;
    padding: 0 50px 30px;

    position: fixed;
    bottom: 0;
    left: 0;

    overflow-y: hidden;

    &__veil {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 40%;

        background-image: linear-gradient(top, transparent 30%, white);
    }
}